<body>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   

    <div class="todo-list-card">
        <h1>Grocery List</h1>

        
        <ul class="todoItems">
            <% items.forEach(item => { %>
                <li class="item">
                    <span class="<%= item.completed ? 'completed' : '' %>"><%= item.thing %></span>
                    <span class="price">$<%= item.price && !isNaN(item.price) ? item.price.toFixed(2) : '0.00' %></span> <!-- Ensure price is a valid number -->
                    <span class="fa fa-trash"></span>
                </li>
            <% }) %>
        </ul>
    

    <form action="/addTodo" method="POST">
        <input type="text" name="todoItem" placeholder="Item Needed">
        <input type="text" name="price" placeholder="Price" pattern="^[0-9]+(\.[0-9]{1,2})?$">
        <input type="submit" value="Add Item">
    </form>

<!-- Update the "Left to do" to show total cash -->
<h2>Total Cost: $<span id="totalCash"><%= totalCash.toFixed(2) %></span></h2>

<!-- Account for Tax Button -->
<button id="accountForTaxBtn">Account for Tax</button>

<h2>With Tax: $<span id="cashAfterTax">0.00</span></h2> <!-- This will display the cash after tax -->

    </div>

    <script src='js/main.js'></script>
</body>
</html>